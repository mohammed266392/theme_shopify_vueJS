/* Start presets*/
.container,.footer,.header{
    padding: 0 25px;
}

body{
    font-weight: 700;
    font-size: 16px;
    line-height: 1.25;
    font-family: "NunitoSans", Helvetica, Arial, sans-serif;
}

.flex {
    display : flex;
}

.space-between {
    justify-content: space-between;
}

.column {
    flex-direction: column;
}

.half{
    width : 50%;
}

/* Start product page */

.product-template {
    padding-top : 24px;
    display: grid;
    grid-template-columns: calc((100% - 25px) / 2) calc((100% - 25px) / 2); 
}

.product-description-container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.product-description{
    width: 50%;
    margin-bottom: 30px;
}

.product-title{
    margin-bottom: 100px;
    font-size: 24px;
    text-transform: uppercase;
}

.product-option-row{
    position: relative;
    user-select : none;
}
